{% extends 'back.html.twig' %}

{% block content %}
<div class="panel panel-default">
<div class="panel-heading">
    <h3 class="panel-title">{{ category.libelle }}</h3>
</div>

<div class="panel-body">
    <h5>{{ category.slug }}</h5>
    <p>{{ category.description }}</p>
    <small>
        crée le {{ category.createdAt|date('Y-m-d H:i:s') }} et modifié le {{ category.updatedAt|date('Y-m-d H:i:s') }}
    </small>
</div>
</div>
   

  

  
            <a class="btn btn-default" href="{{ path('category_admin_index') }}">Retour</a>
        
            <a class="btn btn-danger" href="{{ path('category_admin_edit', { 'id': category.id }) }}">Editer</a>
    
{% endblock %}
{% block breadcrump %}
<ul class="breadcrumb">
    <li> <a href="">Tableau de bord</a></li>
    <li> <a href="{{ path('category_admin_index') }}">liste des categories</a></li>
    <li class="active">{{ category.libelle }}</li>
</ul>
{% endblock %}