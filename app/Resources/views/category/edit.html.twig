{% extends 'back.html.twig' %}

{% block content %}
    <h3>Edition du categorie</h3>

    {{ form_start(edit_form) }}
         <div class="form-group">
             {{ form_row(edit_form.libelle,{'attr' : {'class':'form-control'}}) }}
        </div>
         <div class="form-group">
             {{ form_row(edit_form.slug,{'attr' : {'class':'form-control'}}) }}
        </div>
         <div class="form-group">
             {{ form_row(edit_form.description,{'attr' : {'class':'form-control'}}) }}
        </div>


        <input class="btn btn-danger" type="submit" value="Editer" />
        <a class="btn btn-default" href="{{ path('category_admin_index') }}">Retour</a>
    {{ form_end(edit_form) }}

{% endblock %}
{% block breadcrump %}
 <ul class="breadcrumb">
    <li><a href="">Tableau de bord</a></li>
    <li><a href="{{ path('category_admin_index') }}">Liste des categories</a></li>
    <li class="active">Edition du categorie</li>
 </ul>
{% endblock %}