{% extends 'back.html.twig' %}

{% block content %}
    <h3>Nouveau Post</h3>
   {{ form_start(form) }}
       <div class="row">
           <div class="col-md-8">
               <div class="form-group">
               {{ form_row(form.title , {'required':false,'attr':{'class':'form-control'}}) }}
               </div>

               <div class="form-group">
               {{ form_row(form.slug , {'required':false,'attr':{'class':'form-control'}}) }}
               </div>

               <div class="form-group">
               {{ form_row(form.description , {'required':false,'attr':{'class':'form-control'}}) }}
               </div>

               <div class="form-group">
               {{ form_row(form.body , {'required':false,'attr':{'class':'form-control'}}) }}
               </div>
           </div>

           <div class="col-md-4">
            <div class="form-group">
               {{ form_row(form.image , {'required':false,'attr':{'class':'form-control'}}) }}
               </div>
               <div class="form-group">
               {{ form_row(form.datePublish , {'required':false,'attr':{'class':'form-control'}}) }}
               </div>
                <div class="form-group">
               {{ form_row(form.categories , {'required':false,'attr':{'class':'form-control'}}) }}
               </div>
                <input  class="btn btn-primary" type="submit" value="Create" />
               <a class="btn btn-default" href="{{ path('admin_post_index') }}">Retour</a>
           </div>
       </div>
    {{ form_end(form) }}

 
{% endblock %}
{% block breadcrump %}
<ul class="breadcrumb">
    <li><a href=""> Tableau de bord</a></li>
    <li>Liste des postes</li>
    <li class="active">Nouveau post</li>
</ul>
{% endblock %}