{% extends 'back.html.twig' %}

{% block content %}
    <h3>Liste des postes</h3>
    <a class="btn btn-primary" href="{{ path('admin_post_new') }}">Nouveau post</a>
    
        <div class="row">
        {% for post in posts %}
              
                 <div class="col-xs-12 col-sm-6 col-md-4">
                   <div class="thumbnail">
                     <img src="{{ asset('uploads/posts/' ~ post.image) }}" alt="">
                     <div class="caption">
                       <h3>{{ post.title }}</h3>
                       <p>{{ post.description | slice(0,80) }}...</p>
                       <p><a href="{{ path('admin_post_show', { 'id': post.id }) }}" class="btn btn-primary" role="button">Afficher</a>
                        <a href="{{ path('admin_post_edit', { 'id': post.id }) }}" class="btn btn-warning" role="button">Editer</a></p>
                     </div>
                   </div>
                 </div>
              
            
        {% endfor %}
    </div>

 
{% endblock %}
{% block breadcrump %}
<ul class="breadcrumb">
    <li><a href=""> Tableau de bord</a></li>
    <li class="active">Liste des postes</li>
</ul>
{% endblock %}